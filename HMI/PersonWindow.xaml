<Window x:Class="HMI.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMI"
        mc:Ignorable="d"
        Title="PersonWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Label Content="First Name :" HorizontalAlignment="Right" VerticalAlignment="Center" Width="78" />
        <Label Content="Last Name :" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,13,0,0" Grid.Row="1"/>
        <Label Content="Adress :" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="0.172,8.515" Margin="133,67,0,0" Grid.Row="2"/>
        <Label Content="Phone number :" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="0.372,12.614" Margin="0,13,0,0" Grid.Row="3"/>
        <Label Content="Gender :" HorizontalAlignment="Right" VerticalAlignment="Top" RenderTransformOrigin="0.372,12.614" Margin="0,13,0,0" Grid.Row="4"/>
        <TextBox Text="{Binding FirstName}" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="513" Height="42" />
        <TextBox Text="{Binding LastName}" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="513" Grid.Row="1" Height="42"/>
        <TextBox Text="{Binding Address}" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="513" Grid.Row="2" Height="166"/>
        <TextBox Text="{Binding PhoneNumber}" Grid.Column="1" HorizontalAlignment="Center" Margin="0,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="513" Grid.Row="3" Height="39"/>
        <Button Padding="4" Content="Ok" HorizontalAlignment="Left" Margin="208,0,0,0" Grid.Row="5" VerticalAlignment="Center" Click="True"/>
        <Button Padding="4" Content="Cancel" HorizontalAlignment="Left" Margin="266,16,0,0" Grid.Row="5" VerticalAlignment="Top" Grid.Column="1" Click="False"/>
        <RadioButton Content="Male" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="6,0,461,0" Grid.Row="4" Grid.Column="1" IsChecked="{Binding IsMale}" />
        <RadioButton Content="Female" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="77,0,390,0" Grid.Row="4" Grid.Column="1" IsChecked="{Binding IsFemale}"/>
    </Grid>
</Window>
